<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.zaryabshakir.mediagallery.presentation.views.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_bucketFragment"
            app:destination="@id/bucketFragment" />
    </fragment>
    <fragment
        android:id="@+id/bucketFragment"
        android:name="com.zaryabshakir.mediagallery.presentation.views.BucketFragment"
        android:label="BucketFragment" >
        <argument
            android:name="mediaType"
            app:argType="string"
            android:defaultValue='' />
    </fragment>
</navigation>